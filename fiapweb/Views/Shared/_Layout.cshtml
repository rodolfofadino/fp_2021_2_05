<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication8</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" asp-append-version="true" />

    <environment names="Production">

        <link rel="stylesheet" href="~/css/bundle.min.css" asp-append-version="true" />
    </environment>
    <environment names="Development">

        <link href="~/css/jcarousel.basic.css" rel="stylesheet" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </environment>

    <link href="~/images/mysprite.sprite.css" rel="stylesheet" />

    
    @RenderSection("header", false)
</head>
<body>
    <header>
        <partial name="_Menu" />
        @*@Html.Partial("_Menu")*@


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Fiap
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>

    <script src="~/js/jquery.jcarousel.js" asp-append-version="true"></script>
    <script src="~/js/jquery.lazy.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(function () {
            $('.lazy').lazy();
        });

    </script>
    @await RenderSectionAsync("footer", required: false)
</body>
</html>

